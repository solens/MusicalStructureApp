<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructureapp.ArtistsActivity">

    <LinearLayout
        style="@style/BottomMenu"
        android:id="@+id/menu">

        <TextView
            style="@style/BottomMenuText"
            android:text="Home"
            android:drawableTop="@drawable/home"
            android:id="@+id/home_button"
            android:layout_weight="1"
            />

        <TextView
            style="@style/BottomMenuText"
            android:text="Artists"
            android:drawableTop="@drawable/artist"
            android:id="@+id/artist_button"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            />
        <TextView
            style="@style/BottomMenuText"
            android:text="Songs"
            android:drawableTop="@drawable/music_white"
            android:id="@+id/song_button"
            android:layout_weight="1"
            />
        <TextView
            style="@style/BottomMenuText"
            android:text="Now Playing"
            android:drawableTop="@drawable/play_white"
            android:id="@+id/now_button"
            android:layout_weight="1"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/menu"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/artist1"
                    android:text="Artist 1"
                    style ="@style/ArtistItem"
                    />

                <View
                    style="@style/Divider"
                    />

                <TextView
                    android:id="@+id/artist2"
                    android:text="Artist 2"
                    style ="@style/ArtistItem"
                    />

                <View
                    style="@style/Divider"
                    />

                <TextView
                    android:id="@+id/artist3"
                    android:text="Artist 3"
                    style ="@style/ArtistItem"
                    />

                <View
                    style="@style/Divider"
                    />

                <TextView
                    android:id="@+id/artist4"
                    android:text="Artist 4"
                    style ="@style/ArtistItem"
                    />

                <View
                    style="@style/Divider"
                    />

                <TextView
                    android:id="@+id/artist5"
                    android:text="Artist 5"
                    style ="@style/ArtistItem"
                    />

                <View
                    style="@style/Divider"
                    />

                <TextView
                    android:id="@+id/artist6"
                    android:text="Artist 6"
                    style ="@style/ArtistItem"
                    />

                <View
                    style="@style/Divider"
                    />

                <TextView
                    style="@style/Explanation"
                    android:text="@string/artists_explanation"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
